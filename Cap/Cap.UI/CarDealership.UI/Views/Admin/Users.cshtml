@model List<CarDealership.Models.Queries.UserItem>
@{
	ViewBag.Title = "Users";
}
<div class="row">
	<div class="col-12">
		<h2>Users</h2>
	</div>
</div>
<div class="row">
	<div class="col-12">
		<p>@Html.ActionLink("Add a new User", "AddUser", "Admin", null)</p>
	</div>
</div>

<div class="row">
	<div class="col-12">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Last Name</th>
					<th>First Name</th>
					<th>Email</th>
					<th>Role</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var user in Model)
				{
					<tr>
						<td>@user.LastName</td>
						<td>@user.FirstName</td>
						<td>@user.UserName</td>
						<td>@user.RoleId</td>
						<td>
							@Html.ActionLink("Edit", "UpdateUser", "Admin", new { id = user.UserId }, null)
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
