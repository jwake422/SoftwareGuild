@model CarDealership.UI.Models.ContactUsModel

@{
	ViewBag.Title = "Index";
}

<h2>Contact Us</h2>
<br />

<div class="row">
	<div class="col-md-5">
		@using (Html.BeginForm("Index", "ContactUs", FormMethod.Post, new { id="contact-form", @class = "form-group" }))
		{
			@Html.ValidationSummary()

		<div class="form-group">
			<label>Name:</label>
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
		</div>
		<div class="form-group">
			<label>Email:</label>
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control", type="email"})
		</div>
		<div class="form-group">
			<label>Phone:</label>
			@Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type="tel" })
		</div>
		<div class="form-group">
			<label>Message:</label>
			@Html.TextAreaFor(m => m.Message, new {id = "message", @class = "form-control", required = "required" })
		</div>

			<button type="submit" class="btn btn-dark">Submit</button>
		}
	</div>
	<div class="col-md-6">
		<div class="col-xs-12" id="map">

		</div>
		<div class="col-xs-12" id="address">
			<p>2000 9th St W </p>
			<p>Bradenton, FL 34205</p>
			<br />
			<p>Sales: (941)-747-5097</p>
			<p>Sales: (941)-747-5098</p>
		</div>
	</div>
</div>

@section Scripts
{
	<script>
		$(document).ready(function () {
			var VIN = '@ViewBag.VIN';

			if (VIN.length > 0) {
				$('#message').val('VIN #: ' + VIN + " - ");
			}
			});
	</script>
	<script>
		function initMap() {
			// The location of Disney World
			var disney = { lat: 27.4813, lng: -82.5715 };
			var map = new google.maps.Map(
				document.getElementById('map'), { zoom: 15, center: disney });
			var marker = new google.maps.Marker({ position: disney, map: map });
		}
	</script>
	<script async defer
			src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqsa4UKIIvDcJJZJpwhUPQhrkWzbHQdj8&callback=initMap">
	</script>
}

